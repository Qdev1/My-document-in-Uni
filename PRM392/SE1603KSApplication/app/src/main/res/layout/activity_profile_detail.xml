<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".ProfileDetailActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Profile Detail"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView4"
        android:src="@drawable/image_layer_list" />

    <TextView
        android:id="@+id/tvFirstName"
        android:layout_below="@id/textView4"
        android:layout_toRightOf="@id/imageView"
        style="@style/TextYellow"
        android:text="@string/first_name"
        android:background="@drawable/shape_sample"/>

    <TextView
        android:id="@+id/tvLastName"
        android:layout_below="@id/tvFirstName"
        android:layout_toRightOf="@id/imageView"
        style="@style/TextYellow"
        android:text="@string/last_name" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:paddingTop="12dp"
        android:text="Address" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Back" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:paddingTop="12dp"
        android:text="Mobile No" />

    <Button
        android:id="@+id/btEditProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Edit Profile" />
</RelativeLayout>